---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonicalPath?: string;
  ogImage?: string;
  ogType?: string;
  jsonLd?: Record<string, unknown>;
  bodyClass?: string;
  noIndex?: boolean;
}

const {
  title,
  description,
  canonicalPath = '',
  ogImage = '/profile.png',
  ogType = 'website',
  jsonLd,
  bodyClass = '',
  noIndex = false,
} = Astro.props;

const siteUrl = 'https://janbmedina.com';
const canonicalUrl = `${siteUrl}${canonicalPath}`;
const ogImageUrl = ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />

  <!-- Primary Meta -->
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="author" content="Jan Medina" />
  {noIndex && <meta name="robots" content="noindex, nofollow" />}

  <!-- Canonical -->
  <link rel="canonical" href={canonicalUrl} />

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/profile.png" />

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImageUrl} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:type" content={ogType} />
  <meta property="og:site_name" content="Jan Medina" />
  <meta property="og:locale" content="en_NZ" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImageUrl} />

  <!-- Resource Hints -->
  <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
  <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

  <!-- Fonts (async loading with fallback) -->
  <link
    rel="preload"
    as="style"
    href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Public+Sans:wght@400;700;900&family=Lexend+Mega:wght@400;700;900&display=swap"
    onload="this.onload=null;this.rel='stylesheet'"
  />
  <noscript>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Public+Sans:wght@400;700;900&family=Lexend+Mega:wght@400;700;900&display=swap"
    />
  </noscript>

  <!-- JSON-LD Structured Data -->
  {jsonLd && (
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  )}

  <!-- Theme Color -->
  <meta name="theme-color" content="#fdf6e3" />
</head>
<body class={bodyClass}>
  <slot name="before-nav" />

  <!-- Navigation -->
  <nav class="neo-border border-t-0 border-l-0 border-r-0 bg-cream sticky top-0 z-50" aria-label="Main navigation">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <a href="/" class="font-heading font-bold text-lg tracking-tight hover:text-rust transition-colors">
          Jan M
        </a>
        <div class="flex items-center gap-1 sm:gap-2">
          <a href="/about" class="px-3 py-2 text-sm font-semibold hover:bg-black hover:text-cream transition-colors">About</a>
          <a href="/projects" class="px-3 py-2 text-sm font-semibold hover:bg-black hover:text-cream transition-colors">Projects</a>
          <a href="/contact" class="px-3 py-2 text-sm font-semibold hover:bg-black hover:text-cream transition-colors">Contact</a>
          <a
            href="/os"
            class="ml-2 px-4 py-2 text-sm font-bold bg-black text-cream neo-border shadow-neo-sm neo-transition hover:bg-rust"
          >
            Boot OS
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="neo-border border-b-0 border-l-0 border-r-0 bg-black text-cream" role="contentinfo">

---
import BaseLayout from '../layouts/BaseLayout.astro';
import portfolioData from '../data/portfolioData';

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Jan Medina",
  "url": "https://janbmedina.com",
  "image": "https://janbmedina.com/profile.png",
  "jobTitle": "IT Professional & Developer",
  "worksFor": {
    "@type": "Organization",
    "name": "Self-Employed"
  },
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Auckland",
    "addressCountry": "NZ"
  },
  "sameAs": [
    "https://github.com/AhjinGuild12",
    "https://www.linkedin.com/in/jjmd"
  ],
  "knowsAbout": ["IT Administration", "JAMF Pro", "Microsoft Intune", "React", "TypeScript", "Swift", "iOS Development"]
};

const featuredProjects = portfolioData.projects.slice(0, 3);
---

<BaseLayout
  title="Jan Medina — IT Professional & Developer | Auckland, NZ"
  description="Hi, I'm Jan Medina — an IT Professional and developer based in Auckland, NZ. I manage enterprise device fleets, automate IT workflows, and build apps."
  canonicalPath=""
  jsonLd={jsonLd}
>
  <!-- Hero Section -->
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
    <div class="flex flex-col sm:flex-row items-start gap-8">
      <img
        src="/profile.png"
        alt="Jan Medina — IT Professional and Developer based in Auckland, New Zealand"
        class="w-24 h-24 rounded-full neo-border shadow-neo object-cover"
        width="96"
        height="96"
        loading="eager"
      />
      <div>
        <h1 class="font-heading text-3xl sm:text-4xl lg:text-5xl font-black leading-tight">
          Jan Medina
        </h1>
        <p class="mt-3 text-lg sm:text-xl text-neutral-700 max-w-2xl">
          IT Professional &amp; Developer based in Auckland, NZ. I manage enterprise device fleets, automate IT workflows, and build apps on the side.
        </p>
        <p class="mt-4 text-base text-neutral-600 max-w-2xl">
          From JAMF and Intune policies to React web apps and iOS projects — I ship things that work.
        </p>
        <div class="mt-8 flex flex-wrap gap-4">
          <a
            href="/projects"
            class="px-6 py-3 font-bold bg-black text-cream neo-border shadow-neo neo-transition"
          >
            View Projects
          </a>
          <a
            href="/os"
            class="px-6 py-3 font-bold bg-green text-black neo-border shadow-neo neo-transition"
          >
            Boot My OS
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Overview -->
  <section class="bg-black text-cream py-16" aria-labelledby="skills-heading">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 id="skills-heading" class="font-heading text-2xl font-bold mb-8">What I Work With</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="neo-border border-neutral-700 p-6">
          <h3 class="font-heading text-sm font-bold text-green mb-3">IT &amp; Infrastructure</h3>
          <p class="text-neutral-300 text-sm leading-relaxed">JAMF Pro, Microsoft Intune, Active Directory, Azure AD, MDM Policies, PowerShell</p>
        </div>
        <div class="neo-border border-neutral-700 p-6">
          <h3 class="font-heading text-sm font-bold text-yellow mb-3">Development</h3>
          <p class="text-neutral-300 text-sm leading-relaxed">React, Node.js, TypeScript, JavaScript, Swift, Astro</p>
        </div>
        <div class="neo-border border-neutral-700 p-6">
          <h3 class="font-heading text-sm font-bold text-rust mb-3">Platforms &amp; Tools</h3>
          <p class="text-neutral-300 text-sm leading-relaxed">macOS, Windows, Linux, iOS, Git, Xcode, VS Code, SharePoint</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16" aria-labelledby="projects-heading">
    <div class="flex items-center justify-between mb-8">
      <h2 id="projects-heading" class="font-heading text-2xl font-bold">Featured Projects</h2>
      <a href="/projects" class="text-sm font-semibold hover:underline">View all &rarr;</a>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {featuredProjects.map((project) => (
        <article class="neo-border bg-white p-6 shadow-neo">
          <div class="flex items-center gap-3 mb-3">
            <h3 class="font-heading text-sm font-bold">{project.name}</h3>
            {project.status === 'in-progress' && (
              <span class="text-xs font-semibold uppercase px-2 py-0.5 rounded-full bg-yellow/20 text-yellow border border-yellow/30">
                In Progress
              </span>
            )}
          </div>
          <p class="text-sm text-neutral-600 leading-relaxed">{project.summary}</p>
          {project.links && project.links.length > 0 && (
            <div class="mt-4 flex gap-3">
              {project.links.map((link) => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm font-semibold text-green hover:underline"
                >
                  {link.label} &rarr;
                </a>
              ))}
            </div>
          )}
        </article>
      ))}
    </div>
  </section>

  <!-- Philosophy -->
  <section class="bg-green/10 py-16" aria-labelledby="philosophy-heading">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 id="philosophy-heading" class="font-heading text-2xl font-bold mb-6">Philosophy</h2>
      <blockquote class="text-lg sm:text-xl text-neutral-700 leading-relaxed max-w-3xl font-mono">
        "Ship fast. Learn faster. Every project levels me up.<br />
        Simplicity first — elegant code over clever code.<br />
        AI is the multiplier, craft is the foundation."
      </blockquote>
    </div>
  </section>

  <!-- CTA -->
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 text-center">
    <h2 class="font-heading text-2xl font-bold mb-4">Want to see something different?</h2>
    <p class="text-neutral-600 mb-8 max-w-xl mx-auto">
      I built a full retro desktop OS experience right here in the browser. Explore mini apps, play retro TV, and more.
    </p>
    <a
      href="/os"
      class="inline-block px-8 py-4 text-lg font-bold bg-black text-cream neo-border shadow-neo-lg neo-transition"
    >
      Enter the OS &rarr;
    </a>
  </section>
</BaseLayout>

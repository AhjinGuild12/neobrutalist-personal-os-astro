---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Jan Medina's Blog",
  "description": "Writing about tech, AI tools, and what it's like to build things with them.",
  "url": "https://janbmedina.com/blog",
  "author": {
    "@type": "Person",
    "name": "Jan Medina"
  }
};

const formatDate = (dateStr: string) => {
  return new Date(dateStr).toLocaleDateString('en-NZ', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<BaseLayout
  title="Blog â€” Jan Medina"
  description="Writing about tech, AI tools, and what it's like to build things with them. By Jan Medina."
  canonicalPath="/blog"
  jsonLd={jsonLd}
>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Breadcrumb -->
    <nav aria-label="Breadcrumb" class="mb-8">
      <ol class="flex items-center gap-2 text-sm text-neutral-500">
        <li><a href="/" class="hover:underline">Home</a></li>
        <li aria-hidden="true">/</li>
        <li class="font-semibold text-black">Blog</li>
      </ol>
    </nav>

    <h1 class="font-heading text-3xl sm:text-4xl font-black mb-4">Blog</h1>
    <p class="text-neutral-600 mb-12 max-w-2xl">
      Writing about tech, AI tools, and what it's like to build things with them.
    </p>

    {sortedPosts.length === 0 ? (
      <div class="neo-border bg-white p-8 shadow-neo text-center">
        <p class="text-neutral-500">No posts yet. Check back soon.</p>
      </div>
    ) : (
      <div class="space-y-6">
        {sortedPosts.map((post, i) => (
          <a href={`/blog/${post.id}/`} class="block group">
            <article class="neo-border bg-white p-6 sm:p-8 shadow-neo group-hover:shadow-neo-lg group-hover:-translate-x-[2px] group-hover:-translate-y-[2px] transition-all duration-150">
              <div class="flex items-start justify-between gap-4">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-3">
                    <span class="text-xs font-mono text-neutral-400">[{String(i + 1).padStart(2, '0')}]</span>
                    <h2 class="font-heading text-lg font-bold group-hover:text-rust transition-colors">
                      {post.data.title}
                    </h2>
                  </div>
                  <p class="text-neutral-600 leading-relaxed mb-4">{post.data.description}</p>
                  <div class="flex items-center gap-4">
                    <time datetime={post.data.date} class="text-xs font-mono text-neutral-400">
                      {formatDate(post.data.date)}
                    </time>
                    <div class="flex flex-wrap gap-2">
                      {post.data.tags.map((tag: string) => (
                        <span class="text-xs font-semibold px-2 py-1 bg-cream neo-border border-2 shadow-neo-sm">
                          {tag}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
                <span class="text-neutral-300 group-hover:text-rust transition-colors text-xl font-bold mt-1" aria-hidden="true">
                  &rarr;
                </span>
              </div>
            </article>
          </a>
        ))}
      </div>
    )}
  </div>
</BaseLayout>

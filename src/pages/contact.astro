---
import BaseLayout from '../layouts/BaseLayout.astro';

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Contact Jan Medina",
  "url": "https://janbmedina.com/contact"
};

const links = [
  {
    label: "GitHub",
    url: "https://github.com/AhjinGuild12",
    description: "Check out my code and open-source projects",
    icon: `<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23a11.509 11.509 0 013.003-.404c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>`,
  },
  {
    label: "LinkedIn",
    url: "https://www.linkedin.com/in/jjmd",
    description: "Connect with me professionally",
    icon: `<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>`,
  },
  {
    label: "Email",
    url: "mailto:jantheexplorer.anyhow103@passinbox.com",
    description: "Send me an email",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>`,
  },
  {
    label: "Website",
    url: "https://www.janbmedina.com",
    description: "You're already here!",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>`,
  },
];
---

<BaseLayout
  title="Contact — Jan Medina"
  description="Get in touch with Jan Medina. Find me on GitHub, LinkedIn, or send an email."
  canonicalPath="/contact"
  jsonLd={jsonLd}
>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Breadcrumb -->
    <nav aria-label="Breadcrumb" class="mb-8">
      <ol class="flex items-center gap-2 text-sm text-neutral-500">
        <li><a href="/" class="hover:underline">Home</a></li>
        <li aria-hidden="true">/</li>
        <li class="font-semibold text-black">Contact</li>
      </ol>
    </nav>

    <h1 class="font-heading text-3xl sm:text-4xl font-black mb-4">Get in Touch</h1>
    <p class="text-neutral-600 mb-12 max-w-2xl">
      I'm always open to interesting conversations, collaborations, or just saying hi. Here's where you can find me.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      {links.map((link) => (
        <a
          href={link.url}
          target={link.url.startsWith('mailto:') ? undefined : '_blank'}
          rel={link.url.startsWith('mailto:') ? undefined : 'noopener noreferrer'}
          class="neo-border bg-white p-6 shadow-neo neo-transition flex items-start gap-4 group"
        >
          <div class="w-10 h-10 flex items-center justify-center bg-black text-cream rounded-sm flex-shrink-0 neo-border">
            {link.label === 'Email' ? (
              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" set:html={link.icon} />
            ) : link.label === 'Website' ? (
              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" set:html={link.icon} />
            ) : (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" set:html={link.icon} />
            )}
          </div>
          <div>
            <h2 class="font-heading text-sm font-bold group-hover:text-green transition-colors">{link.label}</h2>
            <p class="text-sm text-neutral-600 mt-1">{link.description}</p>
          </div>
        </a>
      ))}
    </div>

    <section class="mt-16 neo-border bg-green/10 p-8" aria-labelledby="location-heading">
      <h2 id="location-heading" class="font-heading text-lg font-bold mb-3">Based in Auckland, NZ</h2>
      <p class="text-neutral-700 leading-relaxed">
        I work in the NZST timezone (UTC+12). Happy to chat across timezones — just drop me a message
        and I'll get back to you.
      </p>
    </section>
  </div>
</BaseLayout>
